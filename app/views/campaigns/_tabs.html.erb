<nav id="campaign-nav" class="navbar">
  <div class="navbar-header">
    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#campaign-nav-links">
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
  </div>

  <div class="collapse navbar-collapse" id="campaign-nav-links">
    <ul class="campaign-nav">
      <li class="btn btn-default tab" id="goals-tab" data-action="goals edit" data-visible="<%= @campaign.validate_goals %>">
        <%= link_to t(".overview"), campaign_goals_path(@campaign) %>
      </li>
      <li class="btn btn-default tab" id="survey-tab" data-action="survey" data-visible="<%= @campaign.survey %>">
        <%= link_to t(".survey"), campaign_survey_path(@campaign) %>
      </li>
      <li class="btn btn-default tab" id="profile-tab" data-action="profile edit_profile" data-visible="<%= @campaign.campaign_page_valid %>">
